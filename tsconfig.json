{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
